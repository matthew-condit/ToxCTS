@model ToxCTS.Models.Chemical

@{
    Page.Title = "Created";
}

<h2>Details- @Html.DisplayFor(model => model.ChemName)</h2>
<h3>Please Review Your New Chemical for Accuracy.</h3>
<br />
<fieldset>
    <legend>Chemical</legend>

    <div class="display-label">
        @Html.DisplayNameFor(model => model.Amount)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Amount)
    </div>
    <br />
    <div class="display-label">
        @Html.DisplayNameFor(model => model.ChemName)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.ChemName)
    </div>
    <br />
    <div class="display-label">
        @Html.DisplayNameFor(model => model.CommonNames)
    </div>
    <div class="display-field">
        @string.Join(", ", Model.CommonNames)
    </div>
    <br />
    <div class="display-label">
        @Html.DisplayNameFor(model => model.CSC)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.CSC)
    </div>
    <br />
    <div class="display-label">
        @Html.DisplayNameFor(model => model.CAS)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.CAS)
    </div>
    <br />
    <div class="display-label">
        @Html.DisplayNameFor(model => model.Manufacturer)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Manufacturer)
    </div>
    <br />
    <div class="display-label">
        @Html.DisplayNameFor(model => model.ExpDate)
    </div>
    <div class="display-field">
        @String.Format("{0:d}", Model.ExpDate)
    </div>
</fieldset>
<p>
    <a href="~/Home/">Back To List</a> |  @Html.ActionLink("Edit This Chemical", "Edit", this.Model)
</p>
